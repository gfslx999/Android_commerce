<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".mvp.view.activity.GoodDetailActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1100px" >
        <com.youth.banner.Banner
            android:id="@+id/act_good_detail_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/act_good_detail_btn_back"
            android:src="@mipmap/go_back"
            android:layout_margin="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginLeft="50px"
            android:gravity="center_vertical"
            android:layout_marginTop="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageView
                android:src="@mipmap/bao"
                android:layout_width="85px"
                android:layout_height="85px" />
            <TextView
                android:text="¥ "
                android:paddingLeft="20px"
                android:textSize="49px"
                android:textColor="#FF0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/act_good_detail_tv_min_price"
                android:text="98.67"
                android:textSize="50px"
                android:textColor="#FF0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="—"
                android:textSize="49px"
                android:textColor="#FF0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/act_good_detail_tv_normal_price"
                android:text="111.67"
                android:textSize="50px"
                android:textColor="#FF0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:id="@+id/act_good_detail_tv_shop_name"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="30px"
            android:paddingTop="45px"
            android:text="旗舰店"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/act_good_detail_tv_product_name"
            android:text="玛卡巴卡"
            android:maxLines="2"
            android:textColor="#000"
            android:paddingLeft="50px"
            android:textSize="45px"
            android:paddingTop="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="170px" >

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/act_good_detail_ll_shop"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="20px"
                android:layout_marginRight="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/shop_store"
                    android:layout_width="80px"
                    android:layout_margin="10px"
                    android:layout_height="80px" />
                <TextView
                    android:text="店铺"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/act_good_detail_ll_service"
                android:orientation="vertical"
                android:layout_marginRight="30px"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/kefu_service"
                    android:layout_width="80px"
                    android:layout_margin="10px"
                    android:layout_height="80px" />
                <TextView
                    android:text="客服"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/act_good_detail_ll_collect"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/collect"
                    android:layout_width="80px"
                    android:layout_margin="10px"
                    android:layout_height="80px" />
                <TextView
                    android:text="收藏"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginLeft="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/act_good_detail_btn_shop_car"
                    android:background="@drawable/shape_detail_btn_shop_car"
                    android:text="加入购物车"
                    android:textColor="#fff"
                    android:paddingRight="70px"
                    android:layout_width="400px"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/act_good_detail_btn_buy"
                    android:background="@drawable/shape_detail_btn_buy"
                    android:text="立即购买"
                    android:textColor="#fff"
                    android:layout_marginLeft="280px"
                    android:layout_width="400px"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>